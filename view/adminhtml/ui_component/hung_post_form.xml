<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">hung_post_form.hung_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="AHT\Hung\Block\Adminhtml\Post\Edit\BackButton"/>
			<button name="delete" class="AHT\Hung\Block\Adminhtml\Post\Edit\DeleteButton"/>
			<button name="save" class="AHT\Hung\Block\Adminhtml\Post\Edit\SaveButton"/>
			<button name="save_and_continue" class="AHT\Hung\Block\Adminhtml\Post\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>hung_post_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>hung_post_form.hung_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="hung_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="hung_form_data_source" class="AHT\Hung\Model\Post\DataProvider">
			<settings>
				<requestFieldName>hung_id</requestFieldName>
				<primaryFieldName>hung_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<!-- <field name="hung_id" formElement="input" sortOrder="10">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Post</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">hung_id</label>
				<dataScope>hung_id</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field> -->
		<field name="name" formElement="input" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Post</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">name</label>
				<dataScope>name</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="content" formElement="input" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Post</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">content</label>
				<dataScope>content</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field formElement="imageUploader" name="image" sortOrder="40" >
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">post_rules</item>
				</item>
			</argument>
			<settings>
				<elementTmpl>ui/form/element/uploader/image</elementTmpl>
				<dataType>string</dataType>
				<label translate="true">Image</label>
				<visible>true</visible>
				<validation>
					<rule name="required-entry" xsi:type="boolean">true</rule>
				</validation>
			</settings>
			<formElements>
				<imageUploader>
					<settings>
						<required>true</required>
						<uploaderConfig>
							<param xsi:type="url" name="url" path="hung/image/upload"/>
						</uploaderConfig>
						<previewTmpl>Magento_Catalog/image-preview</previewTmpl>
						<openDialogTitle>Media Gallery</openDialogTitle>
						<allowedExtensions>jpg jpeg gif png</allowedExtensions>
						<maxFileSize>4194304</maxFileSize>
					</settings>
				</imageUploader>
			</formElements>
		</field>
	</fieldset>
</form>