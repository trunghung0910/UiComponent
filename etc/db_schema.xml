<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="aht_hung" resource="default" engine="innodb" comment="Table comment">
        <column xsi:type="int" name="hung_id" padding="11" unsigned="true" nullable="false" identity="true" comment=""/>
        <column xsi:type="varchar" name="name" nullable="false" default="default name" comment=""/>
        <column xsi:type="varchar" name="content" nullable="true" default="default content" comment=""/>
        <column length="1000" name="image" nullable="false" xsi:type="varchar"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment=""/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="hung_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="REFERENCE_ID">
            <column name="hung_id"/>
        </constraint>
        <index referenceId="INDEX_REFERENCE_ID" indexType="fulltext">
            <column name="name"/>
            <column name="content"/>
        </index>
    </table>
</schema>